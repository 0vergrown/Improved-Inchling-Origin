{
   "name":"Sugar-Fueled Frenzy",
   "description":"The Inchling's unique metabolism reacts intensely to sugar. Consuming it triggers a powerful \"sugar rush\", granting them unparalleled speed and enhanced saturation. However, indulging too much or too often in this sweet temptation risks overstimulation, potentially leading to nausea, blurred vision, and rapid hunger depletion.",
   "type":"origins:multiple",
   "indulging_resource":{
      "type":"origins:resource",
      "min":0,
      "max":1,
      "hud_render":{
         "should_render":false
      },
      "start_value":0
   },
   "eat":{
      "type":"origins:edible_item",
      "entity_action":{
         "type":"origins:chance",
         "action":{
            "type":"origins:change_resource",
            "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
            "change":1,
            "operation":"add"
         },
         "chance":0.1,
         "fail_action":{
            "type":"origins:apply_effect",
            "effects":[
               {
                  "effect":"minecraft:saturation",
                  "duration":80,
                  "amplifier":3,
                  "is_ambient":true,
                  "show_particles":false,
                  "show_icon":true
               },
               {
                  "effect":"minecraft:speed",
                  "duration":80,
                  "amplifier":10,
                  "is_ambient":true,
                  "show_particles":false,
                  "show_icon":true
               }
            ]
         }
      },
      "item_condition":{
         "type":"origins:ingredient",
         "ingredient":{
            "item":"minecraft:sugar"
         }
      },
      "food_component":{
         "hunger":4,
         "saturation":1.0,
         "meat":false,
         "always_edible":true,
         "snack":true
      },
      "consume_action":"eat",
      "consume_sound":"minecraft:entity.donkey.eat",
      "priority":0,
      "condition":{
         "type":"origins:resource",
         "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
         "comparison":"==",
         "compare_to":0
      }
   },
   "indulging_effects":{
      "type":"origins:action_over_time",
      "rising_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:saturation"
            },
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:speed"
            },
            {
               "type":"origins:apply_effect",
               "effects":[
                  {
                     "effect":"minecraft:nausea",
                     "duration":1200,
                     "amplifier":0,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  },
                  {
                     "effect":"minecraft:hunger",
                     "duration":1200,
                     "amplifier":10,
                     "is_ambient":true,
                     "show_particles":false,
                     "show_icon":true
                  }
               ]
            },
            {
               "type":"origins:delay",
               "action":{
                  "type":"origins:change_resource",
                  "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
                  "change":0,
                  "operation":"set"
               },
               "ticks":1200
            }
         ]
      },
      "falling_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:nausea"
            },
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:hunger"
            }
         ]
      },
      "interval":1,
      "condition":{
         "type":"origins:resource",
         "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
         "comparison":"==",
         "compare_to":1
      }
   },
   "indulging_blurred_vision":{
      "type":"origins:shader",
      "shader":"minecraft:shaders/post/blur.json",
      "toggleable":false,
      "condition":{
         "type":"origins:resource",
         "resource":"improved_inchling:sugar_fueled_frenzy_indulging_resource",
         "comparison":"==",
         "compare_to":1
      }
   }
}